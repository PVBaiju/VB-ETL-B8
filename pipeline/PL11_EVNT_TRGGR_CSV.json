{
	"name": "PL11_EVNT_TRGGR_CSV",
	"properties": {
		"activities": [
			{
				"name": "COPY_CSV_EVNT_TRIGGR",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": "ingress",
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "DS_ADLS_STGEVENT_TRG_01",
						"type": "DatasetReference",
						"parameters": {
							"folder": {
								"value": "@pipeline().parameters.folder",
								"type": "Expression"
							},
							"filename": {
								"value": "@pipeline().parameters.filename",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_ADLS_STGEVENT_TRG_02",
						"type": "DatasetReference",
						"parameters": {
							"filename": {
								"value": "@concat(\n    replace(\n        coalesce(pipeline().parameters.filename, 'defaultfilename.csv'),\n        '.csv',\n        ''\n    ),\n    '_',\n    formatDateTime(utcNow(), 'yyyy-MM-dd-HH-mm-ss'),\n    '.csv'\n)\n",
								"type": "Expression"
							},
							"folder": {
								"value": "@concat('eventcsv/', formatDateTime(utcNow(), 'yyyy'), '/', formatDateTime(utcNow(), 'MM'), '/', formatDateTime(utcNow(), 'dd'))",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"folder": {
				"type": "string"
			},
			"filename": {
				"type": "string"
			}
		},
		"annotations": []
	}
}